= link_to root_path do
  strong Back to main page

h3
  = "#{current_user.email}'s dragons:"
ul
  - @dragons.each do |dragon|
    .col-sm-4
      p
        a href=dragons_team_path(dragon)
          = "#{dragon.name} (#{dragon.dragon_type.name})"
      p
        = link_to 'Delete', dragons_team_path(dragon),
                method: :delete,
                data: { confirm: 'Are you sure?' }